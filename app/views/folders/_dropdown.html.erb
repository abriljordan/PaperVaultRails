<turbo-frame id="folder_<%= folder.id %>_dropdown">
  <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-50">
    <div class="py-1">
      <%= link_to edit_folder_path(folder), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center" do %>
        <i class="fas fa-edit mr-3 text-gray-400"></i>
        Rename
      <% end %>
      <%= link_to share_folder_path(folder), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center" do %>
        <i class="fas fa-share-alt mr-3 text-gray-400"></i>
        Share
      <% end %>
      <hr class="my-1">
      <%= link_to folder_path(folder), 
          class: "block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 flex items-center",
          data: { 
            "turbo-method": :delete,
            "turbo-confirm": "Are you sure you want to delete '#{folder.name}'? This will also delete all files and subfolders inside it."
          } do %>
        <i class="fas fa-trash mr-3"></i>
        Delete
      <% end %>
    </div>
  </div>
</turbo-frame> 