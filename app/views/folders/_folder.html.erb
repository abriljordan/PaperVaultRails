<div id="<%= dom_id folder %>" class="relative group overflow-visible">
  <%= link_to folder_path(folder), class: "block bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow" do %>
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <i class="fas fa-folder text-3xl" style="color: <%= folder.color %>"></i>
      </div>
      <div class="ml-3 min-w-0 flex-1">
        <p class="text-sm font-medium text-gray-900 truncate"><%= folder.name %></p>
        <p class="text-xs text-gray-500"><%= folder.document_count %> items</p>
        <p class="text-xs text-gray-500"><%= number_to_human_size(folder.total_size) %></p>
      </div>
    </div>
  <% end %>

  <!-- Hover actions -->
  <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
    <div class="flex space-x-1 bg-white rounded-full p-1 shadow-md">
      <% if folder.is_starred? %>
        <%= link_to unstar_folder_path(folder), 
            class: "text-yellow-500 hover:text-yellow-600 p-1",
            data: { "turbo-method": :patch }, title: "Unstar" do %>
          <i class="fas fa-star text-sm"></i>
        <% end %>
      <% else %>
        <%= link_to star_folder_path(folder), 
            class: "text-gray-400 hover:text-yellow-500 p-1",
            data: { "turbo-method": :patch }, title: "Star" do %>
          <i class="far fa-star text-sm"></i>
        <% end %>
      <% end %>
      
      <div class="relative">
        <button type="button" class="text-gray-400 hover:text-gray-600 p-1 folder-menu-button" data-folder-id="<%= folder.id %>">
          <i class="fas fa-ellipsis-v text-sm"></i>
        </button>
        
        <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-50 folder-menu-dropdown" 
             id="folder-menu-dropdown-<%= folder.id %>"
             data-folder-id="<%= folder.id %>">
          <div class="py-1">
            <%= link_to edit_folder_path(folder), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center" do %>
              <i class="fas fa-edit mr-3 text-gray-400"></i>
              Rename
            <% end %>
            <%= link_to share_folder_path(folder), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center" do %>
              <i class="fas fa-share-alt mr-3 text-gray-400"></i>
              Share
            <% end %>
            <hr class="my-1">
            <%= link_to folder_path(folder), 
                class: "block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 flex items-center",
                data: { 
                  "turbo-method": :delete,
                  "turbo-confirm": "Are you sure you want to delete '#{folder.name}'? This will also delete all files and subfolders inside it."
                } do %>
              <i class="fas fa-trash mr-3"></i>
              Delete
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 