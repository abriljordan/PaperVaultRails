<div class="max-w-5xl mx-auto py-10">
  <div class="flex items-center mb-6">
    <i class="fas fa-share-alt text-2xl text-blue-500 mr-3"></i>
    <h1 class="text-2xl font-bold">Shared with Me</h1>
  </div>
  <% if defined?(@shared_items) && @shared_items.any? %>
    <table class="w-full table-fixed divide-y divide-gray-200 bg-white rounded-lg shadow-sm border">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-12">Type</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Owner</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Shared At</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-40">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @shared_items.each do |item| %>
          <tr>
            <td class="px-6 py-4">
              <% if item.is_a?(Document) %>
                <i class="fas fa-file text-gray-400"></i>
              <% else %>
                <i class="fas fa-folder text-yellow-500"></i>
              <% end %>
            </td>
            <td class="px-6 py-4 truncate"><%= item.name %></td>
            <td class="px-6 py-4 text-gray-500"><%= item.try(:owner)&.name || '-' %></td>
            <td class="px-6 py-4 text-gray-500"><%= item.try(:shared_at)&.strftime('%b %e, %Y') || '-' %></td>
            <td class="px-6 py-4 flex space-x-2">
              <%= link_to 'Open', '#', class: "text-blue-600 hover:underline" %>
              <%= link_to 'Copy', '#', class: "text-gray-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-16">
      <i class="fas fa-share-alt text-6xl text-blue-200 mb-4"></i>
      <h2 class="text-xl font-semibold mb-2">No shared items</h2>
      <p class="text-gray-500">Files and folders shared with you will appear here.</p>
    </div>
  <% end %>
</div> 